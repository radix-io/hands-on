{
    "mpi": {
        "command": "srun",
        "configuration": "-N 4 -n 512"
    },
    "vol": {

    },
    "file-system": {
        "lustre": {
            "stripe-size": "4M",
            "stripe-count": "8"
        }
    },
    "directory": "SCRATCHDIR",
    "benchmarks": [
        {
            "benchmark": "write",
            "file": "h5bench.h5",
            "configuration": {
                "MEM_PATTERN": "CONTIG",
                "FILE_PATTERN": "CONTIG",
                "TIMESTEPS": "5",
                "DELAYED_CLOSE_TIMESTEPS": "2",
                "COLLECTIVE_DATA": "YES",
                "COLLECTIVE_METADATA": "NO",
                "EMULATED_COMPUTE_TIME_PER_TIMESTEP": "5 s",
                "NUM_DIMS": "1",
                "DIM_1": "4194304",
                "DIM_2": "1",
                "DIM_3": "1",
                "CSV_FILE": "output.csv",
                "MODE": "SYNC"
            }
        },
        {
            "benchmark": "read",
            "file": "h5bench.h5",
            "configuration": {
                "MEM_PATTERN": "CONTIG",
                "FILE_PATTERN": "CONTIG",
                "READ_OPTION": "FULL",
                "TIMESTEPS": "5",
                "DELAYED_CLOSE_TIMESTEPS": "2",
                "COLLECTIVE_DATA": "YES",
                "COLLECTIVE_METADATA": "NO",
                "EMULATED_COMPUTE_TIME_PER_TIMESTEP": "5 s",
                "NUM_DIMS": "1",
                "DIM_1": "4194304",
                "DIM_2": "1",
                "DIM_3": "1",
                "CSV_FILE": "output.csv",
                "MODE": "SYNC"
            }
        }
    ]
}